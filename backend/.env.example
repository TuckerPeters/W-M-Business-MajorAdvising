# W&M Business Major Advising Backend
# Copy to .env and fill in your values

# Contact email for API User-Agent header
CONTACT_EMAIL=your-email@example.com

# Firebase (from Firebase Console -> Project Settings)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_SERVICE_ACCOUNT_PATH=serviceAccountKey.json

# Auth settings (only @wm.edu emails allowed)
ALLOWED_EMAIL_DOMAIN=wm.edu

# OpenAI API key for AI chat service
OPENAI_API_KEY=sk-your-api-key

# Redis cache (optional - caching disabled if not configured)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
